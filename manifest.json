{
  "manifest_version": 3,
  "name": "TracTube",
  "version": "1.0",
  "description": "Tractube - Distraction free youtube",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["https://*.youtube.com/*"],
  "content_scripts": [
    {
      "matches": ["https://*.youtube.com/*"],
      "js": [
        "features/thumbnails.js",
        "features/shorts.js",
        "features/home-feed.js",
        "features/top-tags.js",
        "features/sidebar.js",
        "features/center-video.js",
        "features/hide-comments.js",
        "features/live-chat.js",
        "content.js"
      ],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon.png",
      "32": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "icons": {
    "16": "icons/icon.png",
    "32": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  }
}
